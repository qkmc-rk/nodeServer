                      div10.appendChild(text10)
                      telTd.appendChild(div10);

                      var div11 = document.createElement('div');
                      var text11 = document.createTextNode("楼层："+JSON.parse(arr[i].houseinfo).floor);
                      div11.appendChild(text11)
                      telTd.appendChild(div11);

                      var div12 = document.createElement('div');
                      var text12 = document.createTextNode("家具情况："+JSON.parse(arr[i].houseinfo).jj_1);
                      div12.appendChild(text12)
                      telTd.appendChild(div12);

                      tr.appendChild(telTd);

                      var locationTd = document.createElement('td');
                      var locationText = document.createTextNode(arr[i].isrelease);
                      locationTd.appendChild(locationText);
                      tr.appendChild(locationTd);

                      var joinpeopleTd = document.createElement('td');
                      var joinpeopleText = document.createTextNode(arr[i].isout);
                      joinpeopleTd.appendChild(joinpeopleText);
                      tr.appendChild(joinpeopleTd);

                      var index1Td = document.createElement('td');
                      var index1Link = document.createElement('a');
                      index1Link.setAttribute('href',arr[i].imageindex);
                      var index1Text = document.createTextNode(arr[i].imageindex);
                      index1Link.appendChild(index1Text);
                      index1Td.appendChild(index1Link);
                      tr.appendChild(index1Td);

                      var opTd = document.createElement('td');
                      var opDiv = document.createElement('div');
                      if(arr[i].isrelease == "no"){
                      var opText = document.createTextNode('发布');
                      opDiv.setAttribute('style',"background:green;color:white;text-align:center")
                      }else{
                      var opText = document.createTextNode('撤销');
                      opDiv.setAttribute('style',"background:red;color:white;text-align:center")
                      }
                      
                      opDiv.appendChild(opText);
                      opTd.setAttribute('id',arr[i].id+"&"+arr[i].isrelease);
                      opTd.appendChild(opDiv);
                      opTd.onclick = function(){
