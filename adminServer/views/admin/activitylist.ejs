                      var div3 = document.createElement('div');
                      var text3 = document.createTextNode("主题："+JSON.parse(arr[i].houseinfo).time);
                      div3.appendChild(text3)
                      telTd.appendChild(div3);

                      var div4 = document.createElement('div');
                      var text4 = document.createTextNode("付款方式："+JSON.parse(arr[i].houseinfo).cashType);
                      div4.appendChild(text4)
                      telTd.appendChild(div4);

                      var div5 = document.createElement('div');
                      var text5 = document.createTextNode("面积："+JSON.parse(arr[i].houseinfo).areaWidth);
                      div2.appendChild(text5)
                      telTd.appendChild(div5);

                      var div6 = document.createElement('div');
                      var text6 = document.createTextNode("采光程度："+JSON.parse(arr[i].houseinfo).caig);
                      div6.appendChild(text6)
